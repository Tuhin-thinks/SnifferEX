{
  "name": "snifferex-extension",
  "version": "1.0.0",
  "description": "SnifferEx browser extension with Brave compatibility",
  "scripts": {
    "build:firefox": "web-ext build --source-dir=. --artifacts-dir=../dist --overwrite-dest",
    "build:brave": "node build-brave.js",
    "test:firefox": "web-ext run --source-dir=. --browser-console",
    "lint": "web-ext lint --source-dir=."
  },
  "dependencies": {
    "web-ext": "^7.6.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "fs-extra": "^11.1.1",
    "globals": "^16.5.0"
  }
}
