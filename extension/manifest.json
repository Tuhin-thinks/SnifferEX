{
    "manifest_version": 3,
    "name": "SnifferEx",
    "version": "1.0",
    "description": "SnifferEx is an extension that sniffs out various LinkedIn data on need. It's continuously evolving.",
    "action": {
        "default_popup": "index.html"
    },
    "icons": {
        "32": "icons/nose_32.png",
        "48": "icons/nose_48.png",
        "64": "icons/nose_64.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "*://localhost/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["SnifferEx.js", "content.js"]
        }
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+L"
            }
        },
        "start-listening": {
            "suggested_key": {
                "default": "Alt+L"
            },
            "description": "Start listening to the current tab"
        }
    },
    "content_security_policy": {
         "extension_pages": "script-src 'self'; object-src 'self';"
    }
}